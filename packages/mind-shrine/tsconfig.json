{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@trinity/core": ["../shared-types/dist"],
      "@trinity/dispatcher": ["../dispatcher-adapter/dist"],
      "@trinity/swarmide2-services": ["../swarmide2-services/dist"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
